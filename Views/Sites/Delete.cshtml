@model WebApplicationAnnuaire.Models.Site

@{
    ViewData["Title"] = "Supprimer";
}

<div class="container">
    <h1 class="mb-4">Supprimer</h1>
    <h3 class="mb-4">Êtes-vous sûr de vouloir supprimer ce site ?</h3>
    <div class="row">
        <div class="col-md-6">
            <h4>Site</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Ville)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Ville)
                </dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <a class="btn btn-secondary" asp-action="Index">Retour</a>
                    <button type="submit" class="btn btn-danger">Supprimer</button>
                </div>
            </form>
        </div>
    </div>
</div>
