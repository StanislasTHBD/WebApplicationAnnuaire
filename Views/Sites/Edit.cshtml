@model WebApplicationAnnuaire.Models.Site

@{
    ViewData["Title"] = "Modification";
}

<div class="container">
    <h1 class="mb-4">Modifier</h1>
    <div class="row">
        <div class="col-md-6">
            <h4 class="mb-4">Site</h4>
            <hr />
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="Ville" class="control-label"></label>
                    <input asp-for="Ville" class="form-control" />
                    <span asp-validation-for="Ville" class="text-danger"></span>
                </div>
                <br/>
                <div class="form-group">
                    <a class="btn btn-danger" asp-action="Index">Retour</a>
                    <button type="submit" class="btn btn-warning">Modifier</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
